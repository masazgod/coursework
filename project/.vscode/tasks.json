{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build Hopfield project",
            "command": "cl.exe",
            "args": [
                "gdi32.lib",
                "msvcrt.lib",
                "raylib.lib",
                "winmm.lib",
                "user32.lib",
                "shell32.lib",
                "${fileDirname}\\hopfield.c",
                "${fileDirname}\\hopfield_app.c",
                "/Fe${fileDirname}\\hopfield_app.exe",
                "-I.\\raylib\\include",
                "/link",
                "/libpath:.\\raylib\\lib",
                "/NODEFAULTLIB:libcmt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build Hopfield project"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}